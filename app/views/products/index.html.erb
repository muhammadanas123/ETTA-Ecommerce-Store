<div class="container">
    <h2>Product#index</h2>

    <%= form_tag(products_path, method: :get)  do |f| %>
            <%= label_tag :category %>
            <%= select_tag( :category, options_for_select([['electronics', 'electronics'],['appliance', 'appliance'],['clothing','clothing']]), class: "custom-select col-3") %> 
            <%= submit_tag('Filter', class: "btn btn-outline-info ") %>
    <%end%>
    <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                <th scope="col">#</th>
                <th scope="col">Product Name</th>
                <th scope="col">Owner</th>
                <th scope="col">Brand</th>
                <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% @products.each do |product| %>
                        <tr>
                            <th scope="row">1</th>
                            <td><%=product.product_name%></td>
                            <td><%=product.product_name%></td>
                            <td><%=product.brand%></td>
                            <td>
                                <%= link_to "view", product_path(product), class: "btn btn-outline-info btn-sm"%>
                                <% if  current_user.has_role? :creator, product %>
                                    <%= link_to "edit", edit_product_path(product), class: "btn btn-outline-success btn-sm" %>
                                    <%= link_to "delete", product_path(product), method: :delete, class: "btn btn-outline-danger btn-sm" %>
                                <% end %>
                                <%= link_to "order" , new_product_order_path(product), class: "btn btn-outline-success btn-sm" %>
                            </td>
                        </tr>
                <%end%>
            </tbody>
        </table>



</div>