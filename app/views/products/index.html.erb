<div class="container">
    <h2>Product#index</h2>
    <% @products.each do | product | %>
        <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
            <img src="https://images.unsplash.com/photo-1511556820780-d912e42b4980?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80" class="card-img" alt="<%= product.product_name%>">
            </div>
            <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= product.product_name%></h5>
                <p class="card-text"><%= product.product_desc%></p>
                <p class="card-text"><%= product.brand%></p>
                <p class="card-text"><small class="text-muted"><%= product.price%></small></p>
                <%= link_to "view", product_path(product), class: "btn btn-outline-info btn-sm"%>
                <%= link_to "edit", edit_product_path(product), class: "btn btn-outline-success btn-sm" %>
                <%= link_to "delete", product_path(product), method: :delete, class: "btn btn-outline-danger btn-sm" %>
                <%= link_to "order" , new_product_order_path(product), class: "btn btn-outline-success btn-sm" %>


            </div>
            </div>
        </div>
        </div>
    <%end%>
</div>