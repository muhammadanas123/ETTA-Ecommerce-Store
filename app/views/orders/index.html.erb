<div class="container">
    <h1>welcome to the orders#index</h1>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                <th scope="col">#</th>
                <th scope="col">Product</th>
                <th scope="col">Owner</th>
                <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% @orders.each do |order| %>
                    <% order.products.each do |product| %>
                        <tr>
                            <th scope="row">1</th>
                            <td><%=order.address%></td>
                            <td><%=order.city%></td>
                            <td>
                                <%= link_to "view", product_order_path(product,order), class: "btn btn-outline-info btn-sm"%>
                                <% if  current_user.id == order.user.id %>
                                    <%= link_to "edit", edit_product_order_path(product,order), class: "btn btn-outline-success btn-sm" %>
                                    <%= link_to "delete", product_order_path(product,order), method: :delete, class: "btn btn-outline-danger btn-sm" %>
                                <%end%>
                            </td>
                        </tr>
                    <%end%>
                <%end%>
            </tbody>
        </table>
</div>
